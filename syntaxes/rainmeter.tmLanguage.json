{
  "$schema":
    "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "rainmeter",
  "patterns": [
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#entities"
    },
    {
      "include": "#primitives"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#nestedvariables"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rainmeter",
          "match": "^[\\s]*?[\\w\\d]+"
        },
        {
          "name": "keyword.operator.rainmeter",
          "match": "(=|\\+|\\-|\\?|:|>|<)"
        },
        {
          "name": "entity.name.function.rainmeter",
          "match": "!\\w+"
        },
        {
          "name": "variable.parameter.rainmeter",
          "match": "^@\\w+"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rainmeter",
      "begin": "\"",
      "end": "(\"|$)",
      "patterns": [
        {
          "name": "constant.character.escape.rainmeter",
          "match": "\\."
        },
        {
          "name": "variable.parameter.rainmeter",
          "include": "#variables"
        }
      ]
    },
    "entities": {
      "name": "entity.name.type.rainmeter",
      "begin": "\\[[^#%&\\$]",
      "end": "\\]",
      "patterns": [
        {
          "name": "variable.parameter.rainmeter",
          "include": "#variables"
        },
        {
          "name": "entity.name.function.rainmeter",
          "match": "!\\w+"
        },
        {
          "name": "string.quoted.double.rainmeter",
          "include": "#strings"
        }
      ]
    },
    "primitives": {
      "patterns": [
        {
          "name": "constant.numeric.rainmeter",
          "match": "\\d"
        }
      ]
    },
    "nestedvariables": {
      "name": "variable.parameter.rainmeter.nested",
      "begin": "\\[[#%&\\$]",
      "end": "\\]",
      "patterns": [
        {
          "name": "variable.parameter.rainmeter.nested",
          "include": "#nestedvariables"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.rainmeter",
          "match": "(#.*?#|\\$.*?\\$|%.*?%)"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.rainmeter",
          "match": ";.*"
        }
      ]
    }
  },
  "scopeName": "source.rainmeter"
}
